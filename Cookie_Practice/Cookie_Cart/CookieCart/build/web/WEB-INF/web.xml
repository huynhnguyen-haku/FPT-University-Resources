<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ShoppingServlet</servlet-name>
        <servlet-class>sample.servlet.ShoppingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingAddServlet</servlet-name>
        <servlet-class>sample.servlet.ShoppingAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingViewServlet</servlet-name>
        <servlet-class>sample.servlet.ShoppingViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingRemoveServlet</servlet-name>
        <servlet-class>sample.servlet.ShoppingRemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Checksession</servlet-name>
        <servlet-class>session.Checksession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShoppingServlet</servlet-name>
        <url-pattern>/ShoppingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingAddServlet</servlet-name>
        <url-pattern>/ShoppingAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingViewServlet</servlet-name>
        <url-pattern>/ShoppingViewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingRemoveServlet</servlet-name>
        <url-pattern>/ShoppingRemoveServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Checksession</servlet-name>
        <url-pattern>/Checksession</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>shopcookie.html</welcome-file>
    </welcome-file-list>
</web-app>
